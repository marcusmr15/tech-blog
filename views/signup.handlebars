<head>
    <link rel="stylesheet" href="/css/signup.css">
</head>

<body>
    <h2>Sign Up</h2>
    <div id="signupCard">
        <input id="username-signup" placeholder="username" type="text"></input>
        <input id="email-signup" placeholder="email" type="email"></input>
        <input id="password-signup" placeholder="password" type="password"></input>
        <button id="signupBtn">Sign up!</button>
    </div>

    <div id="signupBox">
        <div class="spaceLoginBox"></div>
        <div id="loginIns">Log in instead</div>
        <div class="spaceLoginBox"></div>
    </div>

    <div id="errorMessageSignup" class="hide">
        <p>Your password needs to be at least <b>8</b> characters long 🧐</p>
        <p>You also need to input a valid email address</p>
    </div>

    <!--! JavaScript link -->
    <script src="/js/signup.js"></script>
</body>

